@page "/builds"
@inject IAccountService AccountService
@inject IStatusService StatusService
@inject IBuildService BuildService
@inject IRoomService RoomService


<h1>Здания</h1>
<NavLink href="builds/add" class="btn btn-sm btn-success mb-2">Добавить здание</NavLink>
<table class="table table-striped table-sm table-responsive table-hover">
    <thead>
        <tr>
            <th scope="col">Номер здания</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if ((builds != null))
        {

            foreach (var build in builds)
            {
                <tr>
                    <td>@build.Name</td>

                </tr>
            }

        }
        @if (loading)
        {
            <tr>
                <td colspan="4" class="text-center">
                    <span class="spinner-border spinner-border-lg align-center"></span>
                </td>
            </tr>
        }
    </tbody>
</table>

<h1>Помещения</h1>
<NavLink href="rooms/add" class="btn btn-sm btn-success mb-2" >Добавить помещение</NavLink>
<table class="table table-striped table-sm table-responsive table-hover">
    <thead>
        <tr>
            <th scope="col">Номер помещения</th>
            <th scope="col">Номер здания</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if ((rooms != null))
        {

            foreach (var room in rooms)
            {
        <tr>
            <td>@room.Name</td>
            <td>@room.Build.Name</td>
        </tr>
            }

        }
        @if (loading)
        {
            <tr>
                <td colspan="4" class="text-center">
                    <span class="spinner-border spinner-border-lg align-center"></span>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private bool loading;
    private IList<Build> builds;
    private IList<Room> rooms;

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        rooms = await RoomService.GetAll();
        builds = await BuildService.GetAll();
        loading = false;
    }

